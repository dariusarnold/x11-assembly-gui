{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "./build.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run under strace",
            "type": "shell",
            "command": "strace",
            "args": ["${workspaceFolder}/main"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "dependsOn": "Build"
        }
    ]
}
